<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>Archetype Created Web Application</display-name>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Admin</web-resource-name>
            <url-pattern>/adminPage</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>

    <security-role>
        <role-name>admin</role-name>
    </security-role>

    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/signin.html</form-login-page>
            <form-error-page>/error.html</form-error-page>
        </form-login-config>
    </login-config>


    <filter>
        <filter-name>AccesFilter</filter-name>
        <filter-class>ua.nure.palagno.filter.AccessFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AccesFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>Locale</servlet-name>
        <servlet-class>ua.nure.palagno.Controllers.LocaleServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditPublication</servlet-name>
        <servlet-class>ua.nure.palagno.Controllers.EditPublicationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeletePublication</servlet-name>
        <servlet-class>ua.nure.palagno.Controllers.DeleteProduct</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>UserPage</servlet-name>
        <servlet-class>ua.nure.palagno.Controllers.UserPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangeStatus</servlet-name>
        <servlet-class>ua.nure.palagno.Controllers.ChangeStatus</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>ua.nure.palagno.Controllers.Register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminPage</servlet-name>
        <servlet-class>ua.nure.palagno.Controllers.AdminPage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>sendEmail</servlet-name>
        <servlet-class>ua.nure.palagno.Controllers.SendingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>subscribePublication</servlet-name>
        <servlet-class>ua.nure.palagno.Controllers.SubscribePublication</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogOut</servlet-name>
        <servlet-class>ua.nure.palagno.Controllers.LogOut</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreatePublication</servlet-name>
        <servlet-class>ua.nure.palagno.Controllers.CreatePublication</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>ua.nure.palagno.Controllers.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>List</servlet-name>
        <servlet-class>ua.nure.palagno.Controllers.PublicationList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Pay</servlet-name>
        <servlet-class>ua.nure.palagno.Controllers.Payment</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MainMenu</servlet-name>
        <servlet-class>ua.nure.palagno.Controllers.FBHandler</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MainMenu</servlet-name>
        <url-pattern>/fbhome</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Pay</servlet-name>
        <url-pattern>/pay</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CreatePublication</servlet-name>
        <url-pattern>/createPublication</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>sendEmail</servlet-name>
        <url-pattern>/sendEmail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeletePublication</servlet-name>
        <url-pattern>/deletePublication</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserPage</servlet-name>
        <url-pattern>/userPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangeStatus</servlet-name>
        <url-pattern>/changeStatus</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Locale</servlet-name>
        <url-pattern>/locale</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminPage</servlet-name>
        <url-pattern>/adminPage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditPublication</servlet-name>
        <url-pattern>/editPublication</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>subscribePublication</servlet-name>
        <url-pattern>/subscribePublication</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogOut</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>List</servlet-name>
        <url-pattern>/PublicationList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/Register</url-pattern>
    </servlet-mapping>
    <listener>
        <listener-class>ua.nure.palagno.listener.ContextListener</listener-class>
    </listener>
    <welcome-file-list>
        <welcome-file>main.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
        <welcome-file>index2.html</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/lastTask</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>


</web-app>
